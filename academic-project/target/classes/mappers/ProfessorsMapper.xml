<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.hyucs.academic.mapper.professorsMapper">	
	<select id="listAll" resultType="ProfessorsVO">
		SELECT *
		FROM tbl_professors
		ORDER BY pcode
	</select>
	
	<insert id="insert">
		INSERT INTO tbl_professors
		VALUES(#{pcode}, #{pname}, #{dept}, #{hireDate}, #{title}, #{salary})
	</insert>
	
	<select id="read" resultType="ProfessorsVO">
		SELECT *
		FROM tbl_professors
		WHERE pcode=#{pcode}
	</select>
	
	<delete id="delete">
		DELETE FROM tbl_professors
		WHERE pcode=#{pcode}
	</delete>
	
	<update id="update">
		UPDATE tbl_professors
		SET pname=#{pname}, dept=#{dept}, hireDate=#{hireDate}, title=#{title}, salary=#{salary}
		WHERE pcode=#{pcode} 
	</update>
	
	<select id="listSearch" resultType="ProfessorsVO">
		SELECT *
		FROM tbl_professors
		
		<include refid="search"></include>
		
		ORDER BY pcode DESC
		LIMIT #{pageStart}, #{perPageNum}
	</select>
   	
	<select id="listSearchCount" resultType="int">
		SELECT COUNT(pcode)
		FROM tbl_professors
		
		<include refid="search"></include>
	</select>
	
	<sql id="search">
		<if test="searchType != null">
			<if test="searchType == 'c'.toString()">
				WHERE pcode like CONCAT('%', #{keyword}, '%')
			</if>
			<if test="searchType == 'n'.toString()">
				WHERE pname like CONCAT('%', #{keyword}, '%')
			</if>
			<if test="searchType == 'd'.toString()">
				WHERE dept like CONCAT('%', #{keyword}, '%')
			</if>
		</if>
	</sql>
</mapper>